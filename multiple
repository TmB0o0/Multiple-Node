#!/bin/bash

# Colors
GREEN="\e[32m"
WHITE="\e[97m"
RED="\e[31m"
RESET="\e[0m"

clear

# Logo
echo -e "${GREEN}"
echo -e "  ##  ###  #######  ######   #######  #######  #######  ######   #######  ##  ##   #######  ###### "
echo -e "  ### ###  ##   ##  ##  ##   ##       ##         ###    ##  ##     ###    ##  ##   ##       ##  ## "
echo -e "  #######  ##   ##  ##  ##   ##       #######    ###    ##  ##     ###    ## ##    ##       ##  ## "
echo -e "  ## ####  ##  ###  ### ###  #######       ##    ###    #######    ###    #######  #######  ####### "
echo -e "  ##  ###  ##  ###  ### ###  ###      ###  ##    ###    ### ###    ###    ##  ###  ###      ### ### "
echo -e "  ##  ###  ##  ###  ### ###  # #      ###  ##    ###    ### ###    ###    ##  ###  # #      ### ### "
echo -e "  ##  ###  #######  #######  #######  #######    ###    ### ###  #######  ##  ###  #######  ### ### ${RESET}"

# Menu
echo -e "\n${WHITE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
echo -e "${WHITE}â•‘       NODE CONTROL MENU       â•‘${RESET}"
echo -e "${WHITE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${RESET}\n"

echo -e "ğŸš€ 1) Install and Start Node"
echo -e "ğŸ”„ 2) Update Node"
echo -e "ğŸ§¨ 3) Remove Node"
echo -e "âŒ 0) Exit"
read -p "Select an option: " choice

if [ "$choice" == "1" ]; then
  echo -e "${GREEN}Downloading and launching scripts...${RESET}"

  wget https://mdeck-download.s3.us-east-1.amazonaws.com/client/linux/install.sh -O install.sh
  source ./install.sh

  wget https://mdeck-download.s3.us-east-1.amazonaws.com/client/linux/update.sh -O update.sh
  source ./update.sh

  wget https://mdeck-download.s3.us-east-1.amazonaws.com/client/linux/start.sh -O start.sh
  source ./start.sh

  echo -e "\n${WHITE}Enter parameters for multiple-cli bind:${RESET}"
  read -p "Download bandwidth: " bandwidth_download
  read -p "Identifier: " identifier
  read -p "PIN: " pin
  read -p "Storage (GB): " storage
  read -p "Upload bandwidth: " bandwidth_upload

  echo -e "${GREEN}Binding node...${RESET}"
  multiple-cli bind --bandwidth-download "$bandwidth_download" --identifier "$identifier" --pin "$pin" --storage "$storage" --bandwidth-upload "$bandwidth_upload"

  echo -e "${GREEN}âœ… Installation complete.${RESET}"

elif [ "$choice" == "2" ]; then
  echo -e "${GREEN}Updating node...${RESET}"

  wget https://mdeck-download.s3.us-east-1.amazonaws.com/client/linux/update.sh -O update.sh
  source ./update.sh

  wget https://mdeck-download.s3.us-east-1.amazonaws.com/client/linux/start.sh -O start.sh
  source ./start.sh

  echo -e "${GREEN}âœ… Update complete.${RESET}"

elif [ "$choice" == "3" ]; then
  echo -e "${RED}âš ï¸ WARNING: This will completely remove your node and all data!${RESET}"
  read -p "Are you sure you want to continue? (y/n): " confirm
  if [ "$confirm" == "y" ] || [ "$confirm" == "Y" ]; then
    echo -e "${RED}Stopping processes and removing files...${RESET}"

    pkill -f multiple || true
    rm -rf ~/.multiple
    rm -f /usr/local/bin/multiple-cli
    rm -f install.sh update.sh start.sh

    echo -e "${GREEN}ğŸ§¹ Node successfully removed.${RESET}"
  else
    echo "Removal canceled."
  fi

elif [ "$choice" == "0" ]; then
  echo "ğŸ‘‹ Exiting..."
  exit 0
else
  echo -e "${RED}â— Invalid choice.${RESET}"
  exit 1
fi
